<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UI.VacationDetails">

    <!-- ScrollView for the form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="#00BCD4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#009688"
            android:padding="8dp">

            <!-- Vacation Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Vacation Title: "
                    android:textColor="#FBFBFB" />

                <EditText
                    android:id="@+id/titletext"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Vacation 1"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Hotel Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Hotel Name: "
                    android:textColor="#F8F7F7" />

                <EditText
                    android:id="@+id/hoteltext"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Hotel"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Start and End Dates -->
            <Button
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:text="Start Date"
                android:textColor="#00796B" />

            <Button
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:text="End Date"
                android:textColor="#00796B" />
        </LinearLayout>
    </ScrollView>



    <TextView
        android:id="@+id/excursionSectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Excursions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/excursionrecyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="List of excursions"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/excursionSectionTitle"
        app:layout_constraintBottom_toTopOf="@id/floatingActionButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add new excursion"
        app:srcCompat="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#00796B"
        app:tint="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
